https://leetcode.com/problems/word-search/

var exist = function(board, word) {
    let R = board.length;
    let C = board[0].length;
    let set = new Set();

    function dfs(r, c, i) {
        if (i == word.length) return true;
        if (r < 0 || r >= R || c < 0 || c >= C || set.has(r + "," + c) || board[r][c] != word[i]) {
            return false;
        }
        set.add(r + "," + c);
        let result = dfs(r, c + 1, i + 1) || dfs(r, c - 1, i + 1) || dfs(r + 1, c, i + 1) || dfs(r - 1, c, i + 1);
        set.delete(r + "," + c);
        return result;
    }

    for (let r = 0; r < board.length; r++) {
        for (let c = 0; c < board[0].length; c++) {
            if (dfs(r, c, 0)) {
                return true;
            }
        }
    }
    return false;
};
