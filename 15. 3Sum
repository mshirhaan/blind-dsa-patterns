var threeSum = function(nums) {
    //sort the array to catch and skip the duplicates on
    //first number and also to use 2 pointer solution for
    //finding the second and third number
    nums = nums.sort((a,b)=>a-b);
    let result = [];
    for(let i = 0; i < nums.length-2; i++) {
        //to skip duplicate on first number
        if(i>0 && nums[i]==nums[i-1]) continue;
        
        let l = i+1;
        let r = nums.length-1;
        
        while(l<r) {
            if(nums[i] + nums[l] + nums[r] == 0) {
                result.push([nums[i], nums[l], nums[r]]);
                l++;
                //there is a chance for duplicate second value here.
                while(nums[l] == nums[l-1] && l<r) {
                    l++;
                }
                r--;
            } else if(nums[l] + nums[r] + nums[i] < 0) {
                l++;
                //there is a chance for duplicate second value here.
                while(nums[l] == nums[l-1]) {
                    l++;
                }
            } else {
                r--;
            }
        }
        
        //duplicate third value will not occur as the r would be reduced automatically.
    }
    return result;
};
