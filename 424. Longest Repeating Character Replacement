https://leetcode.com/problems/longest-repeating-character-replacement/

var characterReplacement = function(s, k) {
    let map = {[s[0]] : 1};
    let i = 0;
    let j = 1;
    let result = 1;
    let max = 1;
    
    while(j<s.length) {
        map[s[j]] = (map[s[j]] || 0) + 1;
        max = Math.max(max, map[s[j]]);
        if((j-i+1 - max) <=k) {
            result = Math.max(result, j-i+1);
            j++;
        } else{
            map[s[i]]--;
            i++;
            j++;
        }
    }
    return result;
};
