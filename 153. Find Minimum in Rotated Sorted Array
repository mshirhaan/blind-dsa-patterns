var findMin = function(nums) {
    // if the array is not rotated,
    // then the first element will be the minimum in a sorted array
    if(nums[0] <= nums[nums.length-1]) return nums[0];
    
    let l = 0;
    let r = nums.length-1;
    while(l<=r) {
        let mid = Math.floor((l+r)/2);
        
        //if pivot is in right sorted array
        if(nums[mid] < nums[l]) {
            if(nums[mid-1] > nums[mid]) {
                return nums[mid];
            }
            r = mid - 1;
        } else { //if pivot is in left sorted array
            if(nums[mid+1] < nums[mid]) {
                return nums[mid+1];
            }
            l = mid + 1;
        }
    }
};
